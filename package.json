{
  "name": "ghl-voice-ai-builder",
  "version": "1.0.0",
  "private": true,
  "description": "GHL Voice AI Builder - Monorepo for voice agent training and deployment",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "build": "npm -w apps/web run build",
    "build:verify": "node apps/web/scripts/verify-build.js",
    "dev:web": "npm -w apps/web run dev",
    "dev:server": "node apps/server/ghl-express-api.js",
    "start:server": "node apps/server/ghl-express-api.js",
    "preview": "npm -w apps/web run preview",
    "test": "npm -w apps/web run test",
    "typecheck": "tsc -p apps/web/tsconfig.json --noEmit",
    "repo:inventory": "node scripts/inventory.js",
    "lint": "echo 'Linting not configured yet'",
    "format": "echo 'Formatting not configured yet'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TonyAqqad/ghl-voice-ai-planner.git"
  },
  "keywords": [
    "ghl",
    "voice-ai",
    "go-high-level",
    "conversation-ai",
    "monorepo"
  ],
  "author": "Tony Aqqad",
  "license": "ISC"
}

