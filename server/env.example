# ============================================
# üõ°Ô∏è GHL API Protection Configuration
# ============================================

# LAYER 1: Kill Switch - Master control for all GHL API calls
# Set to 'true' to enable GHL API integration
# Default: false (sandbox mode - no GHL API calls made)
GHL_API_ENABLED=false

# LAYER 3: Request Queue Configuration
# Controls the rate of outgoing requests to prevent 429 errors
GHL_REQUESTS_PER_SECOND=2          # Conservative: 2 requests per second
GHL_MAX_RETRIES=3                   # Retry failed requests up to 3 times
GHL_RETRY_DELAY=5000                # Base delay between retries (ms)

# LAYER 4: Circuit Breaker Configuration
# Automatically stops making requests if too many failures occur
GHL_CIRCUIT_BREAKER_THRESHOLD=5     # Open circuit after 5 consecutive failures
GHL_CIRCUIT_BREAKER_TIMEOUT=60000   # Wait 60 seconds before retrying (ms)

